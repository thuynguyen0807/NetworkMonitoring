@model IEnumerable<NetworkMonitor.Models.OIDs>
@{
    ViewBag.Title = "OID List";
    Layout = "~/Views/Shared/_UserHome.cshtml";
}
<div class="container-fluid">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">OID List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="OIDs" asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> &nbsp; Add OID
            </a>
        </div>
    </div>
    <br /><br />
    <h5 class="text-info">@ViewBag.message</h5>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead class="text-center">
                <tr>
                    <th>
                        OID
                    </th>
                    <th>
                        Category
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="35%">@obj.OID</td>
                        <td width="35%">@obj.Category</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="OIDs" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-success mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="OIDs" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No OID exist.</p>
    }
</div>
