@model NetworkMonitor.Models.OIDs

@{
    ViewBag.Title = "Add OID";
    Layout = "~/Views/Shared/_UserHome.cshtml";
}


<div class="row justify-content-md-center">

    <div class="col-md-7">
        <div class="border p-4">
            <h1 class="item">Add OID &nbsp; </h1>
            <br />
            <h6 class="text-danger">@ViewBag.message</h6>
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OID" class="control-label"></label>
                    <input asp-for="OID" class="form-control" placeholder="Enter OID string" />
                    <span asp-validation-for="OID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select class="form-control" asp-for="Category">
                        <option>---Choose a category of device</option>
                        @foreach (Category category in (Category[])ViewBag.Result)
                        {
                            <option class="form-control">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-6 form-group">
                        <input type="submit" value="Add" class="btn btn-info w-100" />
                    </div>
                    <div class="col-6 form-group">
                        <input type="reset" value="Cancel" class="btn btn-success w-100" />
                    </div>
                </div>

            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>



