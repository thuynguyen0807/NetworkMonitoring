@model NetworkMonitor.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Views/Shared/_UserHome.cshtml";
}

<div class="row justify-content-md-center">

    <div class="col-md-7">
        <div class="border p-4">
            <h1 class="item">Update</h1>
            <h6 class="item">Category</h6>
            <br />
            <h6 class="text-danger">@ViewBag.message</h6>
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter name of device's category" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-6 form-group">
                        <input type="submit" value="Update" class="btn btn-info w-100" />
                    </div>
                    <div class="col-6 form-group">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

